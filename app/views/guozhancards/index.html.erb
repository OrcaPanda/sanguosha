<body class="guozhan_body">
<%= render 'banner' %>
<%= link_to 'Add New Card', new_guozhancard_path %>
<h2>Wu Heroes</h2>
<table>
	<% index = 1 %>
	<tr>
	<% @wu_cards.each do |card| %>
         	<td>
               		<a href=<%= guozhancard_path(card) %> >
                       		<%= link_to image_tag(card.image.url(:index_thumb)), guozhancard_path(card) %>
               		</a>
      		</td>		
		<% if(index == Card::WIDTH) %>
			</tr>
			<tr>		
			<% index = 0 %>

		<% end %>

		<% index += 1%>
	<% end %>
	</tr>
</table>
